			<td><%= Director %></td>
		</tr>
		<tr>
			<td>Writer</td>
			<td><%= Writer %></td>
		</tr>
		<tr>
			<td>Actors</td>
			<td><%= Actors %></td>
		</tr>
		<tr>
			<td>Language</td>
			<td><%= Language %></td>
		</tr>
		<tr>
			<td>Country</td>
			<td><%= Country %></td>
		</tr>
		<tr>
			<td>Awards</td>
			<td><%= Awards %></td>
		</tr>
		<tr>
			<td>Metascore:</td>
